<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :icon, style: "display: block", class: "form-label" %>
      <%= image_tag form.category.icon_url if category.cached_icon_data %>
      <%= form.hidden_field :icon, value: category.cached_icon_data %> 
    <%= form.file_field :icon, class: "form-control"%>
  </div>
    <p class="notice"><%= notice%></p>
    <p class="alert"><%= alert%></p>
  <div>
    <%= form.submit "Save Category", class: "btn btn-primary mt-3" %>
  </div>
<% end %>
